<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                [%d{dd-MM-yyyy HH:mm:ss.SSS}] %gray([%thread]) %highlight([%-5level]) %cyan(%logger:%line) - %msg%n
            </pattern>
        </encoder>
    </appender>

    <logger name="ru.vkhackathon.snack" level="DEBUG"/>

    <root level="INFO">
        <appender-ref ref="stdout"/>
    </root>
</configuration>